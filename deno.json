{
  "tasks": {
    "start": "deno run -A npm:concurrently 'deno task watch:js' 'deno task watch:style' 'deno task watch:static' 'deno task serve'",
    "dist": "deno run -A jsr:@kt3k/pack -o dist/main.js src/main.ts",
    "watch:js": "deno run --watch=src/main.ts -A jsr:@kt3k/pack@0.1.10 -o dist/main.js src/main.ts",
    "watch:style": "deno run -A https://deno.land/x/twd@v0.4.8/cli.ts -w -o dist/style.css static/index.html",
    "watch:static": "deno run -A npm:cpx2 --watch 'static/**/*' dist",
    "serve": "deno run -A jsr:@std/http/file-server dist -p 8000"
  },
  "compilerOptions": {
    "lib": ["esnext", "dom"]
  },
  "imports": {
    "@kt3k/cell": "jsr:@kt3k/cell@^0.1.6",
    "@kt3k/gameloop": "jsr:@kt3k/gameloop@^1.5.0"
  },
  "fmt": {
    "semiColons": false
  }
}
